# Assistant Auto Ultime - Environment Variables
# Renommez ce fichier en .env et complétez les valeurs

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=votre_cle_secrete_ici
DEBUG=True
PORT=5000

# Google Cloud Vision API (Module OCR)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json
GOOGLE_CLOUD_PROJECT=your-project-id

# OpenAI API (Module NLP)
OPENAI_API_KEY=sk-your-openai-api-key
GPT_MODEL=gpt-4-turbo-preview

# OBD-II Configuration (Module OBD2)
OBD_PORT=/dev/ttyUSB0  # Sur Linux, généralement /dev/ttyUSB0 ou /dev/rfcomm0
OBD_BAUDRATE=9600
OBD_TIMEOUT=30

# Database Configuration
DB_PATH=sqlite:///assistant_auto.db

# ECU Flash Configuration
ECU_DEVICE_ID=0000:0000  # Format: VendorID:ProductID pour USB
ECU_PROTOCOL=CAN  # Protocole: KWP2000, CAN, ISO9141, etc.

# Image Recognition Configuration
MODEL_PATH=image_recognition/models/detection_model.pb
LABELS_PATH=image_recognition/models/labels.pbtxt
CONFIDENCE_THRESHOLD=0.5
